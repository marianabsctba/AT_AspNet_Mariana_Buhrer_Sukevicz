@model DonationApp.ViewModels.DonationIndexViewModel

@{
    ViewData["Title"] = "Index";
}


<h1><span class="badge bg-secondary">Pesquisar cadastro</span></h1>

<form asp-action="Index">
    <label>Pesquisar:</label>
    <input type="text" asp-for="@Model.Search" />
    <br />
    <label>Ordenar:</label>
    <select asp-for="OrderAscendant">
        <option value="@true">Ascendente</option>
        <option value="@false">Descendente</option>
    </select>
    <br />
    <button type="button" class="btn btn-warning">Pesquisar</button>
</form>

<p>
</p>
@{
    if (Model.Donations == null || !Model.Donations.Any())
    {
        <p>Nenhuma doação cadastrada!</p>
        return;
    }
}

<div>
    <a class="btn btn-info" href="/Home/Index" role="button">Voltar</a>
</div>

<p>
</p>
<table class="table table-success table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Donations.First().Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Donations.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Donations.First().Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Donations.First().Courier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Donations.First().Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Donations.First().DateOfRegister)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Donations.First().Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Donations)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Courier)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfRegister)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Detalhar", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Excluir", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
